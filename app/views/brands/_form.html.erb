<%= form_for @brand do |f| %>
  <fieldset>
    <div class="clearfix">
      <%= f.label :name %>
      <div class="input">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :twitter_handle, 'Twitter' %>
      <div class="input">
        <div class="input-prepend">
          <span class="add-on">@</span>
          <%= f.text_field :twitter_handle %>
        </div>
      </div>
    </div>
  </fieldset>

  <div class="actions">
    <%= f.submit :class => 'btn primary' %>
  </div>
<% end %>
